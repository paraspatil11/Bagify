<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Account - Bagify</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display']">
    <%- include('./partials/header') %>

    <div class="container mx-auto mt-10 p-8 bg-gray-100 rounded-lg">
        <h1 class="text-3xl font-semibold mb-6">My Account</h1>
        <div class="grid grid-cols-2 gap-8">
            <div>
                <h2 class="text-xl font-medium mb-4">Account Details</h2>
                <p><strong>Name:</strong> <%= user.fullname %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Account Created:</strong> <%= user.createdAt.toDateString() %></p>
            </div>

            <div>
                <h2 class="text-xl font-medium mb-4">Your Cart</h2>
                <% if (user.cart.length > 0) { %>
                    <ul>
                        <% user.cart.forEach(product => { %>
                            <li class="mb-2"> <strong><%= product.name %></strong> - â‚¹<%= product.price %> </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p>Your cart is empty.</p>
                <% } %>
            </div>
        </div>

        <a href="/users/logout" class="mt-8 inline-block bg-red-600 text-white px-6 py-2 rounded">Logout</a>
    </div>

    <%- include('./partials/footer') %>
</body>

</html>
